{
  "name": "amw_server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "set NODE_ENV=development npm-run-all build server",
    "prod": "set NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "sonar": "node sonar-project.js",
    "test": "jest --coverage --forceExit --detectOpenHandles --verbose",
    "up": "npm-run-all build server"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "firebase-admin": "^8.11.0",
    "helmet": "^3.22.0",
    "http-status": "^1.4.2",
    "jest": "^25.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.3",
    "mongodb": "^3.5.7",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "path": "^0.12.7",
    "test": "^0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "jest-sonar-reporter": "^2.0.0",
    "knex": "^0.21.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1",
    "sonarqube-scanner": "^2.6.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
